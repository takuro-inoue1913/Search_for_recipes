<div class="signupPage">
  <div class="container">
    <header>
      <div class="signupPage_title">New Chef</div>
    </header>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class:"mt-5" }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <label>Email</label>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <div><label for=''>得意料理</label></div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :speciality, "特になし", class: "form-check-input", id: "inlineRadio1" %>
          <label class="form-check-label" for="inlineRadio1">特になし</label>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :speciality, "和食", class: "form-check-input", id: "inlineRadio2" %>
          <label class="form-check-label" for="inlineRadio2">和食</label>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :speciality, "洋食", class: "form-check-input", id: "inlineRadio3" %>
          <label class="form-check-label" for="inlineRadio3">洋食</label>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :speciality, "中華", class: "form-check-input", id: "inlineRadio4" %>
          <label class="form-check-label" for="inlineRadio4">中華</label>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :speciality, "お菓子", class: "form-check-input", id: "inlineRadio5" %>
          <label class="form-check-label" for="inlineRadio5">お菓子</label>
        </div>
      </div>
      <div class="form-group">
        <label>Password</label>
        <%= f.text_field :password, class: "form-control", autocomplete: "off" %>
      </div>
      <div class="form-group">
        <label>Password Again</label>
        <%= f.text_field :password_confirmation, class: "form-control", placeholder: "※ パスワードをもう一度入力してください", autocomplete: "off" %>
      </div>
      <div class="form-group">
        <label for="file_photo">
          <div>Profile Picture</div>
          <%= f.file_field :image, id: "file_photo" %>
        </label>
      </div>
      <div class="text-center">
        <%= f.submit "Creating a Chef", class: "btn submitBtn" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>